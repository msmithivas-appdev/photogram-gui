<h1>List of photos</h1>

<form action="/add_photo">
  <label for="alpha">Image</label>
  <input id="alpha" type="text" name="image" value="Enter a URL for the image">

  <label for="beta">Caption</label>
  <textarea id="beta" type="text" name="caption" value="Enter a caption for the photo"></textarea>

  <label for="gamma">Owner ID</label>
  <input id="gamma" type="integer" name="owner_id" value="Enter an ID of a user">

  <button>Add photo</button>
</form>


<table border="1">

<tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th>Show details</th>
</tr>

<% @list_of_photos.each do |a_photo| %>


<tr>
    <td>
      <img src="<%= a_photo.image%>">
    </td>

    <td>
      <%= a_photo.caption %>
    </td>

    <td>
      <%= a_photo.poster.username %>
    </td>

    <td>
      <%= a_photo.created_at %>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">Show details</a> 
    </td>
  </tr>

<% end %>


</table>
